<script src="assets/js/jquery.maskedinput.js" type="text/javascript"></script>
<script>

    jQuery(document).ready(function($) {
        var br = document.createElement("br");
        // $(".mask-phone").mask('(99) 99999-9999', {placeholder:" "});
        // if(phone.length > 10) {
        //         element.mask("(99) 99999-999?9");
        //     } else {
        //         element.mask("(99) 9999-9999?9");
        //     }
        jQuery("input.telefone-contato")
        .focusout(function (event) {
            var target, phone, element;
            target = (event.currentTarget) ? event.currentTarget : event.srcElement;
            phone = target.value.replace(/\D/g, '');
            element = $(target);
            element.unmask();
            element.text().trim();

            if(phone.length > 10) {
                element.mask("(99) 99999-999?9");
            } else {
                element.mask("(99) 9999-9999?9");
            }
            // element.text = element.text().trim();   
            // alert(element.text.length);         
        });

        jQuery("input.telefone-contato")
        .focusin(function (event) {
            var target, phone, element;
            target = (event.currentTarget) ? event.currentTarget : event.srcElement;
            phone = target.value.replace(/\D/g, '');
            element = $(target);
            element.unmask();

            if(phone.length > 10) {
                element.mask("(99) 99999-999?9");
            } else {
                element.mask("(99) 9999-9999?9");
            }
        });
        $('.send-solicitacao').click(function() {
        var email = $('#experimente-email').val();

        // alert(email);
            if ($('#experimente-nome').val() != '' && $('#experimente-email').val() != '' && $('#Telefone').val() != '' && $('#Nome-da-empresa').val() != '' && $('#Endere-o-do-seu-site').val() != '' && $('#Cargo').val() != '' && $('#N-mero-de-contatos').val() != '' && validateEmail(email) == true) {
                $.ajax({
                    url: '<?php echo base_url; ?>enviar_email',
                    // url: 'http://localhost/site2018/enviar_email.php',
                    dataType: 'json',
                    method: 'POST',
                    data: {
                        nome_contato: $('#experimente-nome').val(),
                        email: $('#experimente-email').val(),
                        telefone: $('#Telefone').val(),
                        nome_empresa: $('#Nome-da-empresa').val(),
                        website: $('#Endere-o-do-seu-site').val(),
                        cargo: $('#Cargo').val(),
                        ambiente_dedicado: ( $('#radio-3').is(':checked') ) ? 'Sim' : 'Não',
                        numero_contatos: $('#N-mero-de-contatos').val(),
                        envio_emails: $('#Envio-de-e-mails').val(),
                        integracoes_desejadas: $('#Integra-es-desejadas').val()
                    },
                    beforeSend: function() {
                        $('#envia-email').hide();
                        $("#status-formulario").text("");
                    },
                    success: function( data ) {
                        // if ( data.status == 'sucesso' ) {
                        //     $("#status-formulario").text("Agradecemos o contato!");
                        //     alert($("#status-formulario").text());
                        // } else { // rolou algum erro
                        //     $("#status-formulario").text("Ocorreu um erro inesperado.");
                        //     $('#envia-email').show();
                        // }
                        $("#status-formulario").html("<p><strong>Agradecemos o contato!</strong> <br> Por favor, aguarde uns instantes. Vamos retornar o mais breve possível! <br><br><br> <strong>Equipe de Atendimento LAHAR</strong></p>");
                    },
                    error: function( data ) {
                        $("#status-formulario").text("Ocorreu um erro inesperado. Por favor, tente novamente mais tarde.");
                        $('#envia-email').show();                        
                    }
                });
            } else {
                $("#status-formulario").html("É necessário preencher todos os campos contendo asterisco(*).");                
            }
        });        
    });
    function normalizaLink(link, campo) {
          if ( link.indexOf('http://') == -1 && link.indexOf('https://') == -1 && link != "" ) {
            campo.value='http://'+link;
          }
          return true;
        }
    function validateEmail(email) {
        var re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/igm;

        return re.test(email);
    }

</script>


