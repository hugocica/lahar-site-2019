    <script src="assets/js/jquery.maskedinput.js" type="text/javascript"></script>
    <script>
        jQuery(document).ready(function($) {
            jQuery("input#vaga_telefone")
            .focusout(function (event) {
                var target, phone, element;
                target = (event.currentTarget) ? event.currentTarget : event.srcElement;
                phone = target.value.replace(/\D/g, '');
                element = $(target);
                element.unmask();
                element.text().trim();

                if(phone.length > 10) {
                    element.mask("(99) 99999-999?9");
                } else {
                    element.mask("(99) 9999-9999?9");
                }       
            });
            jQuery("input#vaga_telefone")
            .focusin(function (event) {
                var target, phone, element;
                target = (event.currentTarget) ? event.currentTarget : event.srcElement;
                phone = target.value.replace(/\D/g, '');
                element = $(target);
                element.unmask();

                if(phone.length > 10) {
                    element.mask("(99) 99999-999?9");
                } else {
                    element.mask("(99) 9999-9999?9");
                }
            });

            $('.change-vaga').click(function() {
                $('#form_vaga').val( $(this).attr('data-vaga') );

                if ( $(this).attr('data-vaga') !== '' ) {
                    $('.cv-form-label').text( 'Cadastre seu currículo para a vaga de ' + $(this).attr('data-vaga') + ':' );
                } else {
                    $('.cv-form-label').text( 'Cadastre seu currículo:' );
                }
            });

            $('#envia-cv').click(function(e) {
                var dadosForm = new FormData( $('#cv_form').get(0) );
                // console.log($('#vaga_cidade').val().search('/'));
                if ($('#vaga_nome').val() != '' && $('#vaga_cidade').val() != '' && $('#vaga_telefone').val() != '' && $('#vaga_pretensao_salarial').val() != '' && $('#vaga_como_conheceu').val() != '' && $('#vaga_pq_lahar').val() != '' && validateEmail($('#vaga_email').val()) == true && $('#vaga_cidade').val().search('/') != -1) {
                    $.ajax({
                        url: '<?php echo base_url; ?>enviar_curriculo',
                        // url: 'http://localhost/site2018/enviar_curriculo',
                        data: dadosForm,
                        dataType: 'json',
                        processData: false,
                        contentType: false,
                        type: 'POST',
                        beforeSend: function() {
                            // $('#envia-cv').hide();
                        },
                        success: function( data ) {
                            if ( data.status == 'ok' ) {
                                // console.log("ok");
                            } else { // rolou algum erro
                                // console.log(data.status);
                            }
                        }
                    });
                }
            });
        });

        function validateEmail(email) {
            var re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/igm;

            return re.test(email);
        }
    </script>

